<div class="container">

  <h2>Your Words, Kyu</h2>

  <table class="table">
    <% @count = 1 %>
    <% @word.sort_by!{|word| word.word().downcase()} %>
    <% @word.each() do |word| %>
      <% if @count % 8 == 0%><tr><% end %>
        <td><a href="/words/<%= word.id()%>/definitions"><%= word.word() %><%= @count %></a></td>
        <% @count += 1 %>
      <% if @count % 8 == 0%></tr><% end %>
      <% @count += 1 %>
    <% end %>
  </table>


  <a href="/words/new" class="btn btn-primary btn-lg active" role="button">Add a Word</a>
  <a href="/words" class="btn btn-default btn-lg active" role="button">View Words</a>

</div>
