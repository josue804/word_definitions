<div class="container">

  <h2><%= @word.word() %></h2>
  <form class="form-horizontal" action="/words" method="post">

    <!-- <input type="hidden" name="id" value="<% Word.all().length() %>"> -->

    <div class="form-group">
      <label for="definition" class="col-sm-2 control-label">Definition</label>
      <div class="col-sm-10">
        <textarea name="definition" class="form-control" rows="3" placeholder="e.g. A human with the ability of converting caffeine into code."></textarea>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Add</button>
      </div>
    </div>
  </form>
</div>
